{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "newLine": "lf",
    "sourceMap": true,
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
    ],
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
